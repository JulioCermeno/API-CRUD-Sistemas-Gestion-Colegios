@model IEnumerable<Api_Web_Crud.Models.Estudiantes>

@{
    ViewData["Title"] = "index";
}

<h1>GESTION DE ESTUDIANTES</h1>

<p>
    <a asp-action="Crear">Crear nuevo Estudiante</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Promedio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Promedio)
            </td>
            <td>
                    <a asp-action="Modificar" class="btn btn-warning" asp-route-id="@item.IdEstudiante">Modificar</a> |
                    <a asp-action="Consultar" class="btn btn-primary" asp-route-id="@item.IdEstudiante">Consultar</a> |
                    <a asp-action="Eliminar" class="btn btn-danger" asp-route-id="@item.IdEstudiante">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
